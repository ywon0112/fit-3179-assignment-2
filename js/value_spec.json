{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "autosize": {"type": "fit", "contains": "padding", "resize": true},
  "config": { "view": { "stroke": null } },
  "params": [ { "name": "selectedRegion", "value": null } ],
  "title": "Value of Production in Selected Region",
  "width": 700,
  "height": 320,
  "data": { "url": "data/mdb_2020_data_with_coords.csv" },
  "transform": [
    { "calculate": "toNumber(datum.GVIAP_Millions)", "as": "GVIAP_Millions_num" }
  ],
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 14,
        "color": "#666",
        "text": "Select a catchment on the map to see its Economic Value by industry."
      },
      "encoding": {
        "opacity": {
          "condition": {"test": "selectedRegion == null", "value": 1},
          "value": 0
        }
      }
    },
    {
      "transform": [
        { "filter": "selectedRegion != null && lower(trim(datum.Region)) == lower(trim(selectedRegion))" },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "GVIAP_Millions_num", "order": "descending"}]
        },
        {
          "calculate": "datum.rank == 1 ? 'ðŸ¥‡ Top Earner' : ''",
          "as": "annotation_label"
        }
      ],
      "encoding": {
        "opacity": {
          "condition": {"test": "selectedRegion == null", "value": 0},
          "value": 1
        },
        "y": {
          "field": "Industry",
          "type": "nominal",
          "sort": {"field": "GVIAP_Millions_num", "order": "descending"},
          "title": "Agricultural Industry",
          "axis": {"labelLimit": 260, "labelPadding": 12, "labelAlign": "right", "labelFlush": false}
        }
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": { "field": "GVIAP_Millions_num", "type": "quantitative", "title": "Gross Value ($AUD million)" },
            "color": { "value": "#FFA500" },
            "tooltip": [
              { "field": "Industry", "type": "nominal" },
              { "field": "GVIAP_Millions_num", "type": "quantitative", "title": "Gross Value ($AUD million)", "format": ".1f" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 5,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "x": { "field": "GVIAP_Millions_num", "type": "quantitative" },
            "text": { "field": "annotation_label", "type": "nominal" },
            "color": { "value": "#000" }
          }
        }
      ]
    }
  ]
}